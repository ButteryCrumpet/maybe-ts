{
  "name": "maybe-none",
  "version": "0.0.2",
  "description": "Typescript implementation of Maybe",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "jest",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "author": "Simon Leigh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ButteryCrumpet/maybe-ts.git"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "jest": "^23.2.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "./tests"
    ]
  }
}
